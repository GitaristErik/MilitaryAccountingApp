<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:minHeight="88dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.Circle"
        tools:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="@dimen/margin.standard"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin.standard"
        android:layout_marginEnd="@dimen/margin.standard"
        android:layout_toEndOf="@id/icon"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        android:textColor="?colorOnSurfaceVariant"
        tools:text="25 Sep, 15:30" />

    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin.standard"
        android:layout_toEndOf="@id/icon"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?colorOnSurface"
        tools:text="Василь Васильович Петренко" />

    <TextView
        android:id="@+id/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin.standard"
        android:layout_toEndOf="@id/icon"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="?colorOnSurfaceVariant"
        tools:text="Командир" />

</RelativeLayout>