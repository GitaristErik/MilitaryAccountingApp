<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin.small"
    android:background="@drawable/background_header_sort_tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sort_option_text"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="@dimen/margin.small.extra"
        android:paddingHorizontal="@dimen/margin.small"
        app:drawableStartCompat="@drawable/ic_sort"
        tools:text="Newest" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_type_button"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:contentDescription="@string/home.search.title"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        app:icon="@drawable/ic_baseline_view_grid_24dp" />

</androidx.appcompat.widget.LinearLayoutCompat>